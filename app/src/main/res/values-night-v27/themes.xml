<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- NoActionBar instead of DarkActionBar. -->
    <style name="Theme.Podcasts" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- System status bar -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- System navigation bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Default values start -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogV27</item>
        <!-- Default values end -->

        <!-- Main colors start -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorEdgeEffect">@color/on_surface_hint_dark</item>

        <item name="colorOnSurfaceHigh">@color/on_surface_high_dark</item>
        <item name="colorOnSurfaceMedium">@color/on_surface_medium_dark</item>
        <item name="colorOnSurfaceLow">@color/on_surface_low_dark</item>
        <item name="colorOnSurfaceHint">@color/on_surface_hint_dark</item>
        <item name="colorOnSurfaceUtil">@color/on_surface_util_dark</item>

        <item name="colorSwipeToRefreshBackground">@color/player_background_dark</item>
        <item name="colorBottomNavViewBackground">@color/bottom_nav_view_background_dark</item>
        <item name="colorNavigationBarOnDialog">@color/navigation_bar_on_dialog_dark</item>
        <item name="colorDialogPill">@color/dialog_pill_dark</item>
        <!-- Main colors end -->

        <!-- Specific colors start -->
        <item name="colorPlayerBackground">@color/player_background_dark</item>
        <item name="colorPlayerCollapsedBackground">@color/player_background_dark</item>
        <item name="colorPlayerPlay">@color/primary_dark</item>
        <item name="colorPlayerPill">@color/player_pill_dark</item>
        <!-- Specific colors end -->

    </style>
</resources>