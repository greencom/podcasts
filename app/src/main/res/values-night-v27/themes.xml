<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- NoActionBar instead of DarkActionBar. -->
    <style name="Theme.Podcasts" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- System status bar -->
        <item name="android:statusBarColor">@color/dark_surface</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- System navigation bar -->
        <item name="android:navigationBarColor">@color/dark_surface</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Default values start -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogV27</item>
        <item name="android:textColorLink">@color/dark_primary</item>
        <!-- Default values end -->

        <!-- Main colors start -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/dark_primary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/dark_surface</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorEdgeEffect">@color/dark_on_surface_hint</item>

        <item name="colorOnSurfaceHigh">@color/dark_on_surface_high</item>
        <item name="colorOnSurfaceMedium">@color/dark_on_surface_medium</item>
        <item name="colorOnSurfaceLow">@color/dark_on_surface_low</item>
        <item name="colorOnSurfaceHint">@color/dark_on_surface_hint</item>
        <item name="colorOnSurfaceUtil">@color/dark_on_surface_util</item>
        <!-- Main colors end -->

        <!-- Other start -->
        <item name="colorSwipeToRefreshBackground">@color/dark_bottom_sheet_background</item>
        <item name="colorBottomNavViewBackground">@color/dark_bottom_nav_view_background</item>
        <item name="colorFabRipple">@color/dark_fab_ripple</item>
        <item name="colorImageButtonBackgroundRipple">@color/dark_image_button_background_ripple</item>
        <!-- Other end -->

        <!-- Bottom Sheet start -->
        <item name="colorBottomSheetBackground">@color/dark_bottom_sheet_background</item>
        <item name="colorBottomSheetPill">@color/dark_bottom_sheet_pill</item>
        <!-- Bottom Sheet end -->

        <!-- ExploreFragment start -->
        <item name="colorSearchButtonTint">@color/dark_search_button_tint</item>
        <item name="colorSearchButtonStroke">@color/dark_search_button_stroke</item>
        <!-- ExploreFragment end -->

        <!-- Player start -->
        <item name="colorPlayerCollapsedBackground">@color/dark_bottom_sheet_background</item>
        <item name="colorPlayerPlay">@color/dark_primary</item>
        <!-- Player end -->

        <!-- Error screen start -->
        <item name="colorErrorRobotWire">@color/dark_error_robot_wire</item>
        <!-- Error screen end -->

    </style>
</resources>