<resources>
    <!-- NoActionBar instead of DarkActionBar. -->
    <style name="Theme.Podcasts" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- System status bar. -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- System navigation bar color setup is moved to v27 versions of themes.xml because
        the android:windowLightNavigationBar attribute is available only on API 27 and above. -->

        <!-- Default colors. -->
        <item name="colorPrimary">@color/blue_pale</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/black</item>

        <!-- Custom colors. -->
        <item name="bottomNavigationViewColor">@color/bottom_navigation_view_dark</item>
        <item name="playerCollapsedBackgroundColor">@color/player_collapsed_background_dark</item>
        <item name="playerExpandedBackgroundColor">@color/player_collapsed_background_dark</item>
        <item name="playerPillColor">@color/player_pill_dark</item>
        <item name="playerPrimaryColor">@color/player_primary_dark</item>
        <item name="playerPrimaryVariantColor">@color/blue_pale</item>
        <item name="playerSecondaryColor">@color/player_secondary_dark</item>
        <item name="playerCollapsedProgressBarBackgroundColor">@color/player_collapsed_background_dark</item>
        <item name="playerSliderInactiveColor">@color/player_slider_inactive_dark</item>

    </style>
</resources>