<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MaterialAlertDialog start -->
    <style name="MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">?attr/colorMaterialAlertDialogBackground</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorOnSurfaceHigh</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48dp</item>
    </style>
    <!-- MaterialAlertDialog end -->


    <!-- AppBarLayout start -->
    <style name="AppBarLayout">
        <item name="elevation">0dp</item>
        <item name="liftOnScroll">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppBarLayout.Back" parent="ImageButton">
        <item name="android:src">@drawable/ic_arrow_back_24</item>
        <item name="tint">?attr/colorOnSurfaceMedium</item>
    </style>

    <style name="AppBarLayout.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceHigh</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <!-- AppBarLayout end -->


    <!-- BottomSheetDialog start -->
    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogV27" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:navigationBarColor">?attr/colorBottomSheetBackground</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheetDialog</item>
        <item name="backgroundTint">?attr/colorBottomSheetBackground</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="BottomSheetPill">
        <item name="android:layout_width">@dimen/bottom_sheet_pill_width</item>
        <item name="android:layout_height">@dimen/bottom_sheet_pill_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/shape_bottom_sheet_pill</item>
    </style>
    <!-- BottomSheetDialog end -->


    <!-- TabLayout start -->
    <style name="TabLayout">
        <item name="tabIndicator">@drawable/shape_tab_indicator</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabRippleColor">@color/tab_ripple_color</item>
        <item name="tabTextAppearance">@style/TabLayout.Tab.Text</item>
    </style>

    <style name="TabLayout.Tab.Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <!-- TabLayout end -->


    <!-- Buttons start -->
    <!-- Button. -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Outlined button. -->
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="strokeColor">?attr/colorOnSurfaceUtil</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Toggle outlined button with icon and rounded corners. -->
    <style name="ToggleButton" parent="OutlinedButton">
        <item name="android:checkable">true</item>
        <item name="android:textColor">@color/toggle_button_text_color</item>
        <item name="android:paddingStart">8dp</item>
        <!-- cornerRadius value with a margin to make sure that the button will be round on any scale. -->
        <item name="cornerRadius">56dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="strokeColor">@color/toggle_button_stroke_color</item>
    </style>

    <!-- ImageButton. -->
    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/ripple_image_button_background_32</item>
    </style>
    <!-- Buttons end -->

</resources>