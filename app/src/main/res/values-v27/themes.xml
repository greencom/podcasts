<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- NoActionBar instead of DarkActionBar. -->
    <style name="Theme.Podcasts" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- System status bar -->
        <item name="android:statusBarColor">@color/light_surface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- System navigation bar -->
        <item name="android:navigationBarColor">@color/light_surface</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Default values start -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogV27</item>
        <!-- Default values end -->

        <!-- Main colors start -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/light_surface</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:colorEdgeEffect">@color/light_on_surface_hint</item>

        <item name="colorOnSurfaceHigh">@color/light_on_surface_high</item>
        <item name="colorOnSurfaceMedium">@color/light_on_surface_medium</item>
        <item name="colorOnSurfaceLow">@color/light_on_surface_low</item>
        <item name="colorOnSurfaceHint">@color/light_on_surface_hint</item>
        <item name="colorOnSurfaceUtil">@color/light_on_surface_util</item>
        <!-- Main colors end -->

        <!-- Other start -->
        <item name="colorSwipeToRefreshBackground">@color/light_surface</item>
        <item name="colorBottomNavViewBackground">@color/light_surface</item>
        <item name="colorFabRipple">@color/light_on_surface_util</item>
        <item name="colorImageButtonBackgroundRipple">@color/light_image_button_background_ripple</item>
        <!-- Other end -->

        <!-- Bottom Sheet start -->
        <item name="colorBottomSheetBackground">@color/light_surface</item>
        <item name="colorBottomSheetPill">@color/light_on_surface_util</item>
        <!-- Bottom Sheet end -->

        <!-- Player start -->
        <item name="colorPlayerCollapsedBackground">@color/light_player_collapsed_background</item>
        <item name="colorPlayerPlay">@color/light_on_surface_medium</item>
        <!-- Player end -->

        <!-- Error screen start -->
        <item name="colorErrorRobotWire">@color/light_error_robot_wire</item>
        <!-- Error screen end -->

    </style>
</resources>