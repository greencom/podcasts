<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TabLayout tab text. -->
    <style name="TabLayout.Tab.Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Button with small text. -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Button with icon. -->
    <style name="Button.Icon" parent="Button">
        <item name="android:paddingStart">8dp</item>
    </style>

    <!-- Outlined button with small text. -->
    <style name="Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="strokeColor">?attr/colorOnSurfaceUtil</item>
    </style>

    <!-- Outlined button with icon. -->
    <style name="Button.Outline.Icon" parent="Button.Outline">
        <item name="android:paddingStart">8dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

    <!-- Outlined button with rounded corners. -->
    <style name="Button.Outline.Rounded" parent="Button.Outline">
        <item name="cornerRadius">18dp</item>
    </style>

    <!-- Outlined button with icon and rounded corners. -->
    <style name="Button.Outline.Rounded.Icon" parent="Button.Outline.Rounded">
        <item name="android:paddingStart">8dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

    <!-- Outlined toggle button with icon and rounded corners. -->
    <style name="Button.Toggle.Outline.Rounded.Icon" parent="Button.Outline.Rounded.Icon">
        <item name="android:checkable">true</item>
        <item name="android:textColor">@color/button_toggle_outline_text</item>
        <item name="strokeColor">@color/button_toggle_outline_stroke</item>
    </style>

</resources>