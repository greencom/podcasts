<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TabLayout tab text. -->
    <style name="TabLayout.Tab.Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Outlined button with rounded corners. -->
    <style name="Button.Outline.RoundedCorners" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textColor">?attr/colorOnSurfaceSecondary</item>
        <item name="strokeColor">?attr/colorOnSurfaceUtil</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Button without AllCaps. -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

</resources>