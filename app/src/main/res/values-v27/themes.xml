<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- NoActionBar instead of DarkActionBar. -->
    <style name="Theme.Podcasts" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- System status bar -->
        <item name="android:statusBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- System navigation bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Default values start -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogV27</item>
        <!-- Default values end -->

        <!-- Main colors start -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/surface_light</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:colorEdgeEffect">@color/on_surface_hint_light</item>

        <item name="colorOnSurfaceHigh">@color/on_surface_high_light</item>
        <item name="colorOnSurfaceMedium">@color/on_surface_medium_light</item>
        <item name="colorOnSurfaceLow">@color/on_surface_low_light</item>
        <item name="colorOnSurfaceHint">@color/on_surface_hint_light</item>
        <item name="colorOnSurfaceUtil">@color/on_surface_util_light</item>

        <item name="colorSwipeToRefreshBackground">@color/surface_light</item>
        <item name="colorBottomNavViewBackground">@color/surface_light</item>
        <item name="colorNavigationBarOnDialog">@color/surface_light</item>
        <item name="colorDialogPill">@color/on_surface_util_light</item>
        <!-- Main colors end -->

        <!-- Specific colors start -->
        <item name="colorPlayerBackground">@color/surface_light</item>
        <item name="colorPlayerCollapsedBackground">@color/player_collapsed_background_light</item>
        <item name="colorPlayerPlay">@color/on_surface_medium_light</item>
        <item name="colorPlayerPill">@color/on_surface_util_light</item>
        <!-- Specific colors end -->

    </style>
</resources>