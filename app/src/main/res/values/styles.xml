<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BottomSheetDialog start -->
    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogV27" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:navigationBarColor">?attr/colorNavigationBarOnDialog</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheetDialog</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
    <!-- BottomSheetDialog end -->

    <!-- TabLayout tab text. -->
    <style name="TabLayout.Tab.Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Buttons start -->
    <!-- Button. -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Outlined button. -->
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="strokeColor">?attr/colorOnSurfaceUtil</item>
    </style>

    <!-- Toggle outlined button with icon and rounded corners. -->
    <style name="ToggleButton" parent="OutlinedButton">
        <item name="android:checkable">true</item>
        <item name="android:textColor">@color/toggle_button_text</item>
        <item name="android:paddingStart">8dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="strokeColor">@color/toggle_button_stroke</item>
    </style>
    <!-- Buttons end -->

</resources>