<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- NoActionBar instead of DarkActionBar. -->
    <style name="Theme.Podcasts" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- System status bar. -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- System navigation bar. -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Default colors. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/black</item>

        <!-- Custom colors. -->
        <item name="colorOnSurfacePrimary">@color/grey_dark_900</item>
        <item name="colorOnSurfaceSecondary">@color/grey_dark_700</item>
        <item name="colorOnSurfaceTertiary">@color/grey_dark_500</item>
        <item name="colorOnSurfaceHint">@color/grey_dark_300</item>
        <item name="colorOnSurfaceUtil">@color/grey_dark_100</item>
        <item name="colorBottomNavViewBackground">@color/bottom_nav_view_background_dark</item>
        <item name="colorPlayerBackground">@color/player_background_dark</item>
        <item name="colorPlayerCollapsedBackground">@color/player_background_dark</item>
        <item name="colorPlayerPlay">@color/blue_dark</item>
        <item name="colorOutlinedButtonRipple">@color/outlined_button_ripple_dark</item>

    </style>
</resources>