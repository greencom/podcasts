<resources>
    <!-- NoActionBar instead of DarkActionBar. -->
    <style name="Theme.Podcasts" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- System status bar -->
        <item name="android:statusBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- System navigation bar color setup is moved to v27 versions of themes.xml
             because the android:windowLightNavigationBar attribute is available only
             on API 27 and above. -->

        <!-- Default values start -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <!-- Default values end -->

        <!-- Default colors start -->
        <item name="colorPrimary">@color/blue_light_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/surface_light</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:colorEdgeEffect">@color/grey_light_300</item>
        <!-- Default colors end -->

        <!-- Custom colors start -->
        <item name="colorOnSurfacePrimary">@color/grey_light_900</item>
        <item name="colorOnSurfaceSecondary">@color/grey_light_700</item>
        <item name="colorOnSurfaceTertiary">@color/grey_light_500</item>
        <item name="colorOnSurfaceHint">@color/grey_light_300</item>
        <item name="colorOnSurfaceUtil">@color/grey_light_100</item>
        <item name="colorSwipeToRefreshBackground">@color/surface_light</item>
        <item name="colorBottomNavViewBackground">@color/surface_light</item>
        <item name="colorBottomSheetDialogPill">@color/grey_light_100</item>
        <!-- Custom colors end -->

        <!-- Player colors start -->
        <item name="colorPlayerBackground">@color/surface_light</item>
        <item name="colorPlayerCollapsedBackground">@color/player_collapsed_background_light</item>
        <item name="colorPlayerPlay">@color/grey_light_700</item>
        <!-- Player colors end -->

    </style>
</resources>