<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TabLayout tab text. -->
    <style name="TabLayout.Tab.Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Button with small text. -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Outlined button with small text. -->
    <style name="Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="strokeColor">?attr/colorOnSurfaceUtil</item>
    </style>

    <!-- Outlined button with rounded corners. -->
    <style name="Button.Outline.Rounded" parent="Button.Outline">
        <item name="cornerRadius">18dp</item>
    </style>

</resources>