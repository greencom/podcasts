<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- NoActionBar instead of DarkActionBar. -->
    <style name="Theme.Podcasts" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- System status bar. -->
        <item name="android:statusBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- System navigation bar. -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Default colors. -->
        <item name="colorPrimary">@color/blue_bright</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/surface_light</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/white</item>

        <!-- Custom colors. -->
        <item name="bottomNavigationViewColor">@color/surface_light</item>

        <item name="playerCollapsedBackgroundColor">@color/player_collapsed_background_light</item>
        <item name="playerExpandedBackgroundColor">@color/surface_light</item>
        <item name="playerPillColor">@color/player_pill_light</item>
        <item name="playerPrimaryColor">@color/player_primary_light</item>
        <item name="playerPrimaryVariantColor">@color/player_primary_light</item>
        <item name="playerSecondaryColor">@color/player_secondary_light</item>
        <item name="playerCollapsedProgressBarBackgroundColor">@color/player_collapsed_background_light</item>
        <item name="playerSliderInactiveColor">@color/player_slider_inactive_light</item>

    </style>
</resources>