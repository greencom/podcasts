<resources>
    <!-- NoActionBar instead of DarkActionBar. -->
    <style name="Theme.Podcasts" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- System status bar -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- System navigation bar color setup is moved to v27 versions of themes.xml
             because the android:windowLightNavigationBar attribute is available only
             on API 27 and above. -->

        <!-- Default values start -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <!-- Default values end -->

        <!-- Main colors start -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorEdgeEffect">@color/on_surface_hint_dark</item>

        <item name="colorOnSurfaceHigh">@color/on_surface_high_dark</item>
        <item name="colorOnSurfaceMedium">@color/on_surface_medium_dark</item>
        <item name="colorOnSurfaceLow">@color/on_surface_low_dark</item>
        <item name="colorOnSurfaceHint">@color/on_surface_hint_dark</item>
        <item name="colorOnSurfaceUtil">@color/on_surface_util_dark</item>

        <item name="colorSwipeToRefreshBackground">@color/bottom_sheet_background_dark</item>
        <item name="colorBottomNavViewBackground">@color/bottom_nav_view_background_dark</item>
        <item name="colorFabRipple">@color/fab_ripple_dark</item>

        <item name="colorBottomSheetBackground">@color/bottom_sheet_background_dark</item>
        <item name="colorBottomSheetPill">@color/bottom_sheet_pill_dark</item>
        <!-- Main colors end -->

        <!-- Specific colors start -->
        <item name="colorPlayerCollapsedBackground">@color/bottom_sheet_background_dark</item>
        <item name="colorPlayerPlay">@color/primary_dark</item>
        <!-- Specific colors end -->

    </style>
</resources>